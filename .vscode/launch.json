    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: All debug Options",
            "type": "python",
            "request": "launch",
            "pythonPath": "${config:python.pythonPath}",
            "program": "${file}",
            "module": "audio_track",
            "env": {
                "VAR1": "1",
                "VAR2": "2"
            },
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "spanish.txt",
                "es"
            ],
            "debugOptions": [
                "RedirectOutput"
            ]
        }
    ]
}